{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Up",
      "type": "shell",
      "command": "docker compose up -d --build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": []
    },
    {
      "label": "Docker: Logs",
      "type": "shell",
      "command": "docker compose logs -f",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Frontend: Serve",
      "type": "shell",
      "command": "ng serve",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Frontend: Test",
      "type": "shell",
      "command": "ng test",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "problemMatcher": []
    },
    {
      "label": "API: Serve",
      "type": "shell",
      "command": "uvicorn app.main:app --reload --port 8000 --host 0.0.0.0",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "API: Test",
      "type": "shell",
      "command": "pytest",
      "options": { "cwd": "${workspaceFolder}/api" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "API: Migrate",
      "type": "shell",
      "command": "alembic upgrade head",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": []
    },
    {
      "label": "API: Create Migration",
      "type": "shell",
      "command": "alembic revision --autogenerate -m \"${input:migrationName}\"",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": []
    },
    {
      "label": "API: BAML Generate",
      "type": "shell",
      "command": "baml-cli generate",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Migration description (snake_case)"
    }
  ]
}
