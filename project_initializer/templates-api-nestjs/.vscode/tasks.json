{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Up",
      "type": "shell",
      "command": "docker compose up -d --build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": []
    },
    {
      "label": "Docker: Logs",
      "type": "shell",
      "command": "docker compose logs -f",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Frontend: Serve",
      "type": "shell",
      "command": "ng serve",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Frontend: Test",
      "type": "shell",
      "command": "ng test",
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "problemMatcher": []
    },
    {
      "label": "API: Serve",
      "type": "shell",
      "command": "npm run start:dev",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "API: Debug",
      "type": "shell",
      "command": "npm run start:debug",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "API: Test",
      "type": "shell",
      "command": "npm test",
      "options": { "cwd": "${workspaceFolder}/api" },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "API: Migrate",
      "type": "shell",
      "command": "npx prisma migrate dev --name \"${input:migrationName}\"",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": []
    },
    {
      "label": "API: Prisma Generate",
      "type": "shell",
      "command": "npx prisma generate",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": []
    },
    {
      "label": "API: Prisma Studio",
      "type": "shell",
      "command": "npx prisma studio",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "API: BAML Generate",
      "type": "shell",
      "command": "npx baml-cli generate",
      "options": { "cwd": "${workspaceFolder}/api" },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Migration name (snake_case)"
    }
  ]
}
